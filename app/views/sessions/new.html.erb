<% provide(:title, "Login") %>
<div class="login">
  <h1>Login</h1>
  <div class="row">
    <div class = "col-md-6 col-md-offset-3">
      <div>
        <%= form_with(url: login_path, scope: :session, local: true) do |f| %>
        
          <%= f.text_field :email, class: "form_control", placeholder: "メールアドレス" %>
          <%= f.password_field :password, class: "form_control", placeholder: "パスワード" %>
          
          <%= f.label :remember_me, class: "checkbox inline" do %>
            <%= f.check_box :remember_me %>
            <span>ログイン情報を記憶する</span>
          <% end %>  
  
          <%= f.submit "Login", class: "btn btn-primary" %>
        <% end %>
      </div>
      <div class="other-login">
        <p>―――または―――</p>
        <p>facebookでログイン</p>
        <%= link_to "パスワードを忘れた場合", new_password_reset_path %>
      </div>
      <div class="make-account">
        アカウントをお持ちではないですか？
        <%= link_to "登録する", signup_path %>
      </div>
      
    </div>
  </div>  
</div>
