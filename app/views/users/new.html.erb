<% provide(:title, "Signup") %>
<h1>Sign Up</h1>
<div class="row">
  <div class = "col-md-6 col-md-offset-3">
    <p>facebookでログイン</p>
    <p>―――または―――</p>
    <div class="signup">
      <%= form_with(model: @user, local: true) do |f| %>
        <%= render 'shared/error_messages', object: f.object %>
      
        <%= f.text_field :full_name, class: "form_control", placeholder: "フルネーム"  %>
        <%= f.text_field :name, class: "form_control", placeholder: "ユーザー名" %>
        <%= f.text_field :email, class: "form_control", placeholder: "メールアドレス" %>
        <%= f.password_field :password, class: "form_control", placeholder: "パスワード" %>
        <%= f.password_field :password_confirmation, class: "form_control", placeholder: "パスワード（確認用）" %>
        
        <%= f.submit "Make an Account", class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>